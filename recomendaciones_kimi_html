<span class="comment">// Ejemplo de implementación integrada</span>
<span class="keyword">class</span> <span class="string">ExtractorSystem</span> {
<span class="keyword">private</span>:
    SensorManager sensorManager;
    StateMachine stateMachine;
    ConfigManager configManager;
    DisplayManager displayManager;
    FanController fanController;
    AlarmManager alarmManager;
    Logger logger;
    
<span class="keyword">public</span>:
    <span class="keyword">void</span> <span class="string">setup</span>() {
        configManager.loadConfig();
        sensorManager.begin();
        displayManager.begin();
        fanController.begin();
        logger.log(LOG_INFO, <span class="string">&#34;SYSTEM&#34;</span>, <span class="string">&#34;Sistema iniciado&#34;</span>);
    }
    
    <span class="keyword">void</span> <span class="string">loop</span>() {
        esp_task_wdt_reset();  <span class="comment">// Watchdog</span>
        
        <span class="comment">// Sistema integrado y robusto</span>
        SensorData sensors = sensorManager.getValidatedData();
        stateMachine.update();
        updateFanControl();
        displayManager.updateDisplay(sensors, stateMachine);
    }
};
                    </div>
